<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.helitha.heartapigame.controllers.LeaderboardScreenController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Home Button -->
    <Button text="Home" onAction="#handleHomeButton"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;"
            prefWidth="80" prefHeight="35"
            AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"/>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>

        <Label text="🏆 Leaderboard 🏆" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <Label fx:id="finalScoreLabel" text="Your Score: 0"
           style="-fx-font-size: 18px; -fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>

    <!-- TableView for Top Scores -->
    <TableView fx:id="leaderboardTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="rankColumn" text="Rank" prefWidth="100" />
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="300" />
            <TableColumn fx:id="scoreColumn" text="Score" prefWidth="200" />
        </columns>
    </TableView>

    <Button text="Back to Home" onAction="#handleBackToHome"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px;"
            prefWidth="200" prefHeight="50"/>
    </VBox>
</AnchorPane>

