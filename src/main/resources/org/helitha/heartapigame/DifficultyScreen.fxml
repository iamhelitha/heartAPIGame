<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.helitha.heartapigame.controllers.DifficultyScreenController"
            styleClass="main-background"
            stylesheets="@css/global-styles.css">

    <!-- Home Button -->
    <Button text="Home" onAction="#handleHomeButton"
            styleClass="btn-home"
            AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"/>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="25.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>

        <Label text="Select Difficulty" styleClass="title-medium"/>

    <Label text="Choose your challenge level" styleClass="subtitle-info"/>

    <Button fx:id="easyButton" text="Easy (30 seconds)" onAction="#handleEasy"
            styleClass="btn-primary, btn-large"/>

    <Button fx:id="mediumButton" text="Medium (20 seconds)" onAction="#handleMedium"
            styleClass="btn-warning, btn-large"/>

    <Button fx:id="hardButton" text="Hard (10 seconds)" onAction="#handleHard"
            styleClass="btn-danger, btn-large"/>

    <Button fx:id="backButton" text="Back" onAction="#handleBack"
            styleClass="btn-gray, btn-normal"
            prefWidth="200" prefHeight="40"/>
    </VBox>
            styleClass="btn-gray, btn-normal"

