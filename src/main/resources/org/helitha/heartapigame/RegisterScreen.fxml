<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.helitha.heartapigame.controllers.RegisterScreenController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Home Button -->
    <Button text="Home" onAction="#handleHomeButton"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;"
            prefWidth="80" prefHeight="35"
            AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"/>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>

        <Label text="Register" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <VBox spacing="5.0">
        <Label text="Display Name:"/>
        <TextField fx:id="displayNameField" promptText="Enter your display name" prefWidth="300"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Email:"/>
        <TextField fx:id="emailField" promptText="Enter your email" prefWidth="300"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="300"/>
    </VBox>

    <Button fx:id="registerButton" text="Register" onAction="#handleRegister"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"
            prefWidth="300" prefHeight="35"/>

    <Hyperlink fx:id="loginLink" text="Already have an account? Login" onAction="#handleBackToLogin"
               style="-fx-font-size: 12px;"/>
    </VBox>
</AnchorPane>

