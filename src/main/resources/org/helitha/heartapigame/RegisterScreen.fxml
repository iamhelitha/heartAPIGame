<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      spacing="20.0"
      fillWidth="false"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.helitha.heartapigame.controllers.RegisterScreenController"
      styleClass="main-background"
      stylesheets="@css/global-styles.css">
    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
    </padding>

    <!-- Title -->
    <Label text="❤ Create Account ❤" styleClass="title-large"/>

    <Label text="Welcome! Please fill the details below"
           styleClass="subtitle-muted"/>

    <!-- Auth Card -->
    <VBox spacing="15.0"
          alignment="CENTER"
          prefWidth="360"
          maxWidth="360"
          styleClass="auth-card">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>

        <!-- Display Name Field -->
        <VBox spacing="5.0" alignment="CENTER_LEFT" prefWidth="320" maxWidth="320">
            <Label text="Display Name" styleClass="form-label"/>
            <TextField fx:id="displayNameField"
                       promptText="Enter your display name"
                       prefWidth="320"
                       styleClass="text-field"/>
        </VBox>

        <!-- Email Field -->
        <VBox spacing="5.0" alignment="CENTER_LEFT" prefWidth="320" maxWidth="320">
            <Label text="Email Address" styleClass="form-label"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       prefWidth="320"
                       styleClass="text-field"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5.0" alignment="CENTER_LEFT" prefWidth="320" maxWidth="320">
            <Label text="Password" styleClass="form-label"/>
            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           prefWidth="320"
                           styleClass="password-field"/>
        </VBox>

        <!-- Register Button -->
        <Button fx:id="registerButton"
                text="Register"
                onAction="#handleRegister"
                prefWidth="320"
                prefHeight="45"
                styleClass="btn-primary">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </Button>

        <!-- Back to Login Link -->
        <Hyperlink fx:id="loginLink"
                   text="Already have an account? Login"
                   onAction="#handleBackToLogin"
                   alignment="CENTER"
                   styleClass="hyperlink">
            <VBox.margin>
                <Insets top="5"/>
            </VBox.margin>
        </Hyperlink>
    </VBox>
</VBox>
