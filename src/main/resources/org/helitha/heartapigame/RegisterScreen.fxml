<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      spacing="20.0"
      fillWidth="false"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.helitha.heartapigame.controllers.RegisterScreenController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
    </padding>

    <!-- Title -->
    <Label text="❤ Create Account ❤" textFill="#333333">
        <font>
            <Font name="System Bold" size="36"/>
        </font>
    </Label>

    <Label text="Welcome! Please fill the details below"
           textFill="#555555"
           style="-fx-opacity: 0.9;">
        <font>
            <Font size="14"/>
        </font>
    </Label>

    <!-- Auth Card -->
    <VBox spacing="15.0"
          alignment="CENTER"
          prefWidth="360"
          maxWidth="360"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>

        <!-- Display Name Field -->
        <VBox spacing="5.0" alignment="CENTER_LEFT" prefWidth="320" maxWidth="320">
            <Label text="Display Name" style="-fx-text-fill: #333333; -fx-font-weight: bold;"/>
            <TextField fx:id="displayNameField"
                       promptText="Enter your display name"
                       prefWidth="320"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;"/>
        </VBox>

        <!-- Email Field -->
        <VBox spacing="5.0" alignment="CENTER_LEFT" prefWidth="320" maxWidth="320">
            <Label text="Email Address" style="-fx-text-fill: #333333; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       prefWidth="320"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5.0" alignment="CENTER_LEFT" prefWidth="320" maxWidth="320">
            <Label text="Password" style="-fx-text-fill: #333333; -fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           prefWidth="320"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;"/>
        </VBox>

        <!-- Register Button -->
        <Button fx:id="registerButton"
                text="Register"
                onAction="#handleRegister"
                prefWidth="320"
                prefHeight="45"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </Button>

        <!-- Back to Login Link -->
        <Hyperlink fx:id="loginLink"
                   text="Already have an account? Login"
                   onAction="#handleBackToLogin"
                   alignment="CENTER"
                   style="-fx-font-size: 12px;">
            <VBox.margin>
                <Insets top="5"/>
            </VBox.margin>
        </Hyperlink>
    </VBox>
</VBox>
