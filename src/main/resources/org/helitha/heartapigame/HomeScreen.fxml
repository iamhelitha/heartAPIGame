<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.helitha.heartapigame.controllers.HomeScreenController"
            styleClass="main-background">
    
    <!-- Main Content Centered -->
    <VBox alignment="CENTER" spacing="20.0" 
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="80.0"/>
        </padding>

        <Label text="Heart API Game" styleClass="game-title"/>

        <Label fx:id="userNameLabel" text="Welcome, User!" styleClass="subtitle"/>

        <VBox spacing="18" alignment="CENTER" styleClass="menu-container">
            <Button fx:id="playButton" text="Play" onAction="#handlePlay"
                    styleClass="btn-8bit, btn-start" prefWidth="300"/>

            <Button fx:id="leaderboardButton" text="Leaderboard" onAction="#handleLeaderboard"
                    styleClass="btn-8bit, btn-options" prefWidth="300"/>

            <Button fx:id="creditsButton" text="Credits" onAction="#handleCredits"
                    styleClass="btn-8bit, btn-credits" prefWidth="300"/>

            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                    styleClass="btn-8bit, btn-ghost" prefWidth="300"/>
        </VBox>
    </VBox>
    
    <!-- Mute Button at top left (on top layer) -->
    <Button fx:id="muteButton" text="ðŸ”Š" onAction="#handleMute"
            styleClass="btn-8bit, btn-ghost" prefWidth="60"
            AnchorPane.topAnchor="15.0" AnchorPane.leftAnchor="15.0"/>
</AnchorPane>
