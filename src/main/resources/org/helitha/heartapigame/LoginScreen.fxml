<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      spacing="20.0"
      fillWidth="false"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.helitha.heartapigame.controllers.LoginScreenController"
      styleClass="main-background"
      stylesheets="@css/global-styles.css">
    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
    </padding>

    <!-- Title -->
    <Label text="❤ Heart Login ❤" styleClass="title-large"/>

    <Label text="Welcome back! Please login to continue"
           styleClass="subtitle-muted"/>

    <!-- Auth Card -->
    <VBox spacing="15.0"
          alignment="CENTER"
          prefWidth="360"
          maxWidth="360"
          styleClass="auth-card">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>

        <!-- Email Field -->
        <VBox spacing="5.0" alignment="CENTER_LEFT" prefWidth="320" maxWidth="320">
            <Label text="Email Address" styleClass="form-label"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       prefWidth="320"
                       styleClass="text-field"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5.0" alignment="CENTER_LEFT" prefWidth="320" maxWidth="320">
            <Label text="Password" styleClass="form-label"/>
            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           prefWidth="320"
                           styleClass="password-field"/>
        </VBox>

        <!-- Login Button -->
        <Button fx:id="loginButton"
                text="Login"
                onAction="#handleLogin"
                prefWidth="320"
                prefHeight="45"
                styleClass="btn-primary">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </Button>

        <!-- Register Link -->
        <Hyperlink fx:id="registerLink"
                   text="Don't have an account? Register"
                   onAction="#handleRegister"
                   alignment="CENTER"
                   styleClass="hyperlink">
            <VBox.margin>
                <Insets top="5"/>
            </VBox.margin>
        </Hyperlink>
    </VBox>

    <!-- Divider -->
    <Label text="OR" styleClass="divider-text">
        <VBox.margin>
            <Insets top="10" bottom="10"/>
        </VBox.margin>
    </Label>

    <!-- Guest Button -->
    <Button fx:id="guestButton"
            text="Play as Guest"
            onAction="#handlePlayAsGuest"
            prefWidth="320"
            prefHeight="45"
            styleClass="btn-ghost"/>
</VBox>
