<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.helitha.heartapigame.controllers.LoginScreenController"
            styleClass="auth-background">

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="25.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets top="60.0" right="40.0" bottom="40.0" left="40.0"/>
        </padding>

        <!-- Title -->
        <Label text="❤ Heart API Game ❤" styleClass="game-title"/>

        <Label text="Welcome back!" styleClass="title-large"/>

        <!-- Form Container -->
        <VBox spacing="18.0" alignment="CENTER" maxWidth="400" styleClass="menu-container">
            <padding>
                <Insets top="25.0" right="30.0" bottom="25.0" left="30.0"/>
            </padding>
            
            <Label text="Enter your email" styleClass="form-label"/>
            <TextField fx:id="emailField" promptText="Email" prefWidth="340"/>
            
            <Label text="Enter your password" styleClass="form-label">
                <VBox.margin>
                    <Insets top="8"/>
                </VBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="340"/>
        </VBox>

        <!-- Buttons -->
        <VBox spacing="12.0" alignment="CENTER">
            <padding>
                <Insets top="10"/>
            </padding>
            
            <Button fx:id="loginButton"
                    text="Login"
                    onAction="#handleLogin"
                    styleClass="btn-8bit, btn-start"
                    prefWidth="300"/>
            <Button fx:id="guestButton"
                    text="Continue as Guest"
                    onAction="#handlePlayAsGuest"
                    styleClass="btn-8bit, btn-ghost"
                    prefWidth="300"/>
        </VBox>

        <!-- Register Link -->
        <Hyperlink fx:id="registerLink"
                   text="Don't have an account? Register"
                   onAction="#handleRegister"
                   alignment="CENTER">
            <VBox.margin>
                <Insets top="8"/>
            </VBox.margin>
        </Hyperlink>
    </VBox>
    
    <!-- Mute Button (on top layer) -->
    <Button fx:id="muteButton" text="🔊" onAction="#handleMute"
            styleClass="btn-8bit, btn-ghost" prefWidth="60"
            AnchorPane.topAnchor="15.0" AnchorPane.rightAnchor="15.0"/>
</AnchorPane>
