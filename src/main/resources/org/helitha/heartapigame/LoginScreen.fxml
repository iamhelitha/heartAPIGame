<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.helitha.heartapigame.controllers.LoginScreenController"
      style="-fx-background-color: linear-gradient(to bottom, #ff6b6b, #ee5a6f);">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <!-- Title with Heart -->
    <Label text="❤ Heart Login ❤" textFill="white">
        <font>
            <Font name="System Bold" size="36"/>
        </font>
    </Label>

    <Label text="Welcome back! Please login to continue" textFill="white" style="-fx-opacity: 0.9;">
        <font>
            <Font size="14"/>
        </font>
    </Label>

    <!-- Login Form Card -->
    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>

        <!-- Email Field -->
        <VBox spacing="5.0">
            <Label text="Email Address" style="-fx-text-fill: #333333; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="Enter your email"
                      style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;"
                      prefWidth="320"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5.0">
            <Label text="Password" style="-fx-text-fill: #333333; -fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password"
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;"
                          prefWidth="320"/>
        </VBox>

        <!-- Login Button -->
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"
                prefWidth="320" prefHeight="45">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </Button>

        <!-- Register Link -->
        <Hyperlink fx:id="registerLink" text="Don't have an account? Register here" onAction="#handleRegister"
                   style="-fx-text-fill: #ff6b6b; -fx-font-size: 13px; -fx-underline: true;"
                   alignment="CENTER">
            <VBox.margin>
                <Insets top="5"/>
            </VBox.margin>
        </Hyperlink>
    </VBox>

    <!-- Divider -->
    <Label text="OR" textFill="white" style="-fx-font-weight: bold;">
        <VBox.margin>
            <Insets top="10" bottom="10"/>
        </VBox.margin>
    </Label>

    <!-- Guest Button -->
    <Button fx:id="guestButton" text="Play as Guest" onAction="#handlePlayAsGuest"
            style="-fx-background-color: white; -fx-text-fill: #ff6b6b; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-border-color: white; -fx-border-radius: 8; -fx-cursor: hand;"
            prefWidth="320" prefHeight="45"/>
</VBox>

