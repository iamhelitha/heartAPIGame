<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.helitha.heartapigame.controllers.LoadingScreenController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets topRightBottomLeft="20" />
            </padding>
            <children>
                <ProgressBar fx:id="progressBar" progress="0.0" prefWidth="300" />
                <Label fx:id="statusLabel" text="Loading..." />
            </children>
        </VBox>
    </children>
</AnchorPane>
